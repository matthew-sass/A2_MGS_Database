<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/stylesheets/editstyle.css">
</head>
<body>
    <% rectanglesInfo.forEach(function(r) { %>
        <h2>Edit: <%= r.name %></h2><br>

        <svg width="100" height="100">
            <rect width="<%= r.width %>" height="<%= r.height %>" style="fill:<%= r.color %>;"/>
        </svg>

    <% }); %>
    <div class="container">
    <ul>    
        <% rectanglesInfo.forEach(function(r) { %>
            <div class="left">    
                <li>ID:</li>
                <li>Name:</li>
                <li>Width:</li>
                <li>Height:</li>
                <li>Color:</li>
            </div>
            
                <form method="POST" action="/submitEdit">
                    <div class="right">
                    <li><input type="number" id="id" name="id" value="<%= r.id %>" readonly></li>
                    <li><input type="text" id="name" name="name" value="<%= r.name %>"></li>
                    <li><input type="number" id="width" name="width" value="<%= r.width %>"></li>
                    <li><input type="number" id="height" name="height" value="<%= r.height %>"></li>
                    <li><input type="text" id="color" name="color" value="<%= r.color %>"></li>
                    </div>
                    <br>
                    <input type="submit" value="Confirm Changes">
                </form>
            <br>
            <form class="" action="/rectanglesmain">
                <button id="returnfromedit">Return Home</button> 
            </form>
            <div class="clear"></div> 
        <% }); %>
    </ul>
    </div>
    <script src="/public/scripts.js"></script>
</body>
</html>